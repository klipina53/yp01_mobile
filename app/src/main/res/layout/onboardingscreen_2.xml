<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".onBoardingScreen_2"
    android:background="#FA4A0C">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:background="@drawable/boardingscreen2"
            android:layout_gravity="center"
            android:gravity="end">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginBottom="20dp"
                android:background="@drawable/welcome_element"
                android:rotation="-20">

                <TextView
                    android:layout_width="165dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="5dp"
                    android:fontFamily="@font/italianno"
                    android:text="Welcome To\nWSR Food"
                    android:textColor="@color/black"
                    android:textSize="44sp" />

            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:layout_marginTop="45dp"
            android:gravity="center">

            <Button
                android:layout_width="150dp"
                android:layout_height="65dp"
                android:background="@drawable/button_radius"
                android:text="Sing In"
                android:fontFamily="@font/italianno"
                android:textAllCaps="false"
                android:textSize="24sp"
                android:textColor="@color/black"
                android:layout_marginRight="10dp"
                android:onClick="onSingIn"/>

            <Button
                android:layout_width="150dp"
                android:layout_height="65dp"
                android:background="@drawable/button_radius"
                android:text="Sing Up"
                android:fontFamily="@font/italianno"
                android:textAllCaps="false"
                android:textSize="24sp"
                android:textColor="@color/black"
                android:layout_marginLeft="10dp"
                android:onClick="onSingUp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:gravity="center"
            android:layout_gravity="center">

            <LinearLayout
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:background="@drawable/slider_gray"
                android:layout_marginRight="5dp"
                android:onClick="OnClickBoardingScreen_1"/>

            <LinearLayout
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:background="@drawable/slider_white"
                android:layout_marginLeft="5dp"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>